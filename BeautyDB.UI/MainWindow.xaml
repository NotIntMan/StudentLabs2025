<Window x:Class="BeautyDB.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautyDB.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Создание" Width="120" Height="40" Margin="0,0,10,0" Click="CreateButton_Click"/>
            <Button Content="Редактирование" Width="120" Height="40" Click="EditButton_Click"/>
        </StackPanel>

        <!-- Reservation Display -->
        <TextBlock Grid.Row="1" x:Name="ReservationTextBlock" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
